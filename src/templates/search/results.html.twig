{{ form_start(form) }}
    {{ form_row(form.query) }}
    <button type="submit">Search</button>
{{ form_end(form) }}

<div id="search-results">
    {% if results is not empty %}
        <ul>
            {% for result in results %}
                <li>{{ result.name }} - {{ result.description }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>No results found.</p>
    {% endif %}
</div>
